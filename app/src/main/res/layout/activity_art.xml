<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_art"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.art.art.ART">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome. What do you need help with?"
        android:layout_margin="30dp"
        android:textSize="24dp"/>

    <Button
        android:layout_below="@id/welcome"
        android:id="@+id/assistance"
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:text="Assist"
        android:onClick="load_assist_activity"
        android:textSize="18dp"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/assistance"/>
    <Button
        android:id="@+id/repair"
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:layout_below="@+id/assistance"
        android:text="Repair"
        android:onClick="load_repair_activity"
        android:textSize="18dp"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/repair"
        />
    <Button
        android:id="@+id/transportation"
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:layout_below="@+id/repair"
        android:text="Transportation"
        android:onClick="load_transportation_activity"
        android:textSize="18dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="15dp"
        android:drawableRight="@drawable/transport"/>

    <TextView
        android:id="@+id/log_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transportation"
        android:text="Log:"
        android:background="@drawable/back"
        android:textSize="25dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"/>

    <TextView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/log_banner"
        android:text="\n"
        android:background="@drawable/back"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
</RelativeLayout>
